<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_common_bg">
    <TextView
        android:id="@+id/tv_dialog_common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textColor="@color/dialog_text_color_1"
        tools:text="标题"
        />
    <View
        android:id="@+id/dialog_line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dialog_line_color"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_common_title"
        android:layout_marginTop="15dp"
        />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_line_1"
        app:layout_goneMarginTop="15dp"
        android:padding="5dp"
        />
    <View
        android:id="@+id/dialog_line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dialog_line_color"
        app:layout_constraintTop_toBottomOf="@id/fl_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_line_2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
    <TextView
        android:id="@+id/tv_dialog_common_cancel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_line_2"
        app:layout_constraintWidth_percent="0.5"
        android:gravity="center"
        android:background="@drawable/dialog_left_btn_bg"
        android:textColor="@color/dialog_text_color_3"
        android:textSize="14sp"
        tools:text="取消"
        />
        <View
            android:id="@+id/dialog_line_3"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/dialog_line_color"
            app:layout_constraintTop_toBottomOf="@id/dialog_line_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    <TextView
        android:id="@+id/tv_dialog_common_confirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_line_2"
        app:layout_constraintWidth_percent="0.5"
        android:gravity="center"
        android:background="@drawable/dialog_left_btn_bg"
        android:textColor="@color/dialog_text_color_3"
        android:textSize="14sp"
        tools:text="取消"
        />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>